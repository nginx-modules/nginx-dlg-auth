#!/bin/bash

echo -n '{"client":"myTestClient","pwd":"v8(9D1A>7n9J<","scope":["test"],"rw":false,"exp":4405688331,"hawkAlgorithm":"sha256"}' | \
	iron -i 1 -p $IRON_PASSWORD_1 > tok

AUTHORIZATION=$(hawk -i `cat token` -p 'v8(9D1A>7n9J<' -H localhost -P /protectedxx -O 80 -M GET -a sha256 -m header)

STATUS=`curl -s -H "$AUTHORIZATION" http://localhost/protected -w "%{http_code}" -o /dev/null`;

if [ $STATUS -ne 401 ] ; then
	echo "... Expected 401 but got $STATUS";
        cat tok;
	echo "... $AUTHORIZATION";
	exit 1;
fi


tail -1 /usr/local/nginx/logs/error.log | grep -q 'Invalid signature in Hawk'

if [ $? -ne 0 ] ; then
	echo "... Expected error message not present in error log"
	tail -1 /usr/local/nginx/logs/error.log
	exit 1;
fi

